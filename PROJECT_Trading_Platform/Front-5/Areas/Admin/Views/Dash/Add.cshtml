<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add new product
</button>
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal2">
    Add new category
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form method="post" asp-area="admin" asp-controller="dash" asp-action="Add" enctype="multipart/form-data">
                    <label>Text:</label>
                    <input class="form-control form-control-sm" type="text" id="Text" asp-for="name">

                    <label>Picture 1</label>
                    <input class="form-control form-control-sm" type="file" id="photo1" asp-for="file1">
                    <span style="color:red" asp-validation-for="file1"></span>
                    <label>Picture 2</label>
                    <input class="form-control form-control-sm" type="file" id="photo2" asp-for="file2" multiple>
                    <span style="color:red" asp-validation-for="file2"></span>
                    <label>Other pictures</label>
                    <input class="form-control form-control-sm" type="file" id="photo2" asp-for="Images" multiple="multiple">
                    <span style="color:red" asp-validation-for="Images"></span>
                    <label>Price</label>
                    <input class="form-control form-control-sm" type="text" id="price" asp-for="price"><br>

                    <label>Description</label>
                    <textarea class="form-control form-control-sm" asp-for="description" id="description" name="description" rows="4" cols="50"></textarea><br>
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" asp-for="CategoryId">
                        @foreach(var item in ViewBag.Categories)
                        {
                        <option value="@item.Id">@item.Name</option>
                            
                        }
                    </select>
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" asp-for="CategorytwoId">
                        @foreach (var item in ViewBag.Categories_two)
                        {
                            <option value="@item.Id">@item.Name</option>

                        }
                    </select>
                    
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" asp-for="ColorId">
                        @foreach (var item in ViewBag.Colors)
                        {
                            <option value="@item.Id">@item.color</option>
                        }
                    </select>
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" asp-for="SizeId">
                        @foreach (var item in ViewBag.Size)
                        {
                            <option value="@item.Id">@item.name</option>
                        }
                    </select>
                    <br><br>
                    <button type="submit" class="btn btn-primary">Add new product</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-area="admin" asp-controller="dash" asp-action="Addtocategory" enctype="multipart/form-data">
                    <label>Add category name:</label>
                    

                    <input class="form-control form-control-sm" type="text" id="category" asp-for="Category.Name"><br>
                    <input type="checkbox" style="width:20px;height:20px;" asp-for="Category.ischeck" value="true" /><br /><br />
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </form>
            </div>

        </div>
    </div>
</div>

