@model RegisterVM

<h1 style="margin:20px;">Register</h1>
<div class="container">
    <div class="row justify-content-center align-items-center">
<div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 text-center ">
    <h3 class="title-7">register</h3>
    <div class="login_wrapper login_wrapper_2">
        @Html.ValidationSummary(true,"",new {@class="text-danger"})
        <form asp-controller="Akaunt" asp-action="Register" method="post">
                    <div class="input_wrap">
                        <label>User Name<span>*</span></label>
                        <input asp-for="Name" type="text">
                        <span style="color:red" asp-validation-for="Name"></span>
                    </div>
                    <div class="input_wrap">
                        <label>User Surname<span>*</span></label>
                        <input asp-for="Surname" type="text">
                        <span style="color:red" asp-validation-for="Surname"></span>
                    </div>
                    <div class="input_wrap">
                        <label>User Age<span>*</span></label>
                        <input asp-for="Age" type="text">
                        <span style="color:red" asp-validation-for="Age"></span>
                    </div>

            <div class="input_wrap">
                <label>Email address<span>*</span></label>
                <input asp-for="Email" type="email">
                <span style="color:red" asp-validation-for="Email"></span>
            </div>
            <div class="input_wrap">
                <label>Password<span>*</span></label>
                <input asp-for="Password" type="text">
                <span style="color:red" asp-validation-for="Password"></span>
            </div>
            <div class="input_wrap">
                <label>Confirm password<span>*</span></label>
                <input asp-for="confirmpass" type="text">
                <span style="color:red" asp-validation-for="confirmpass"></span>
            </div>
            <div class="input_wraph">
                <label>Remember me!<span>*</span></label>
                 <input asp-for="Isremember" type="checkbox">
                 <span style="color:red" asp-validation-for="Isremember"></span>
            </div>
            <div class="input_wrap input_wrap_3">
                <span class="mb-10 pt-15">A password will be sent to your email address.</span>
                <p class="mb-30">Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy.</p>
                <button type="submit">register</button>
            </div>
        </form>
    </div>
</div>
    </div>
</div>