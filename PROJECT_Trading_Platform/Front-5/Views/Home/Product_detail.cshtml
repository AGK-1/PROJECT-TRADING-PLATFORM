<div class="container">
<br>
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12">
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-2">
                    <div class="single_product_tab">
                        <div class="single_prodct">
                            <ul class="nav nav-tabs justify-content-center mb-55" id="dfde" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#homde" type="button" role="tab" aria-selected="true"><img src="assets/img/product/17.jpg" alt=""></button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profidfdle" type="button" role="tab" aria-selected="false"><img src="assets/img/product/17-1.jpg" alt=""></button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" data-bs-toggle="tab" id="jelko" data-bs-target="#contadfdct" type="button" role="tab" aria-selected="false"><img src="~/assets/img/product/@Model.photo1" alt=""></button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="kids-tab" data-bs-toggle="tab" data-bs-target="#kidsdfd" type="button" role="tab" aria-selected="false"><img src="~/assets/img/product/@Model.photo2" alt=""></button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    @if (Model.Images != null){

                                     @foreach (var image in Model.Images)
                                        {
                                           
                                            <button class="nav-link" id="kids-tab" data-bs-toggle="tab" data-bs-target="#marget-@z" type="button" role="tab" aria-selected="false"><img src="~/assets/img/product/@image.ImaUrl" alt=""></button>
                                            z++;
                                       }
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-10 col-lg-10 col-md-10">
                    <div class="single_preview_product">
                        <div class="single-popup-view">
                            <a class="popup-image" href="~/assets/img/product/@Model.photo1"><i class="fal fa-search"></i></a>
                        </div>
                        <div class="tab-content" id="myTabefContent">
                            <div class="tab-pane fade show active" id="homde" role="tabpanel">
                                <div class="full-view">
                                    <img src="~/assets/img/product/@Model.photo1" alt="">
                                </div>
                            </div>
                            <div class="tab-pane fade" id="profidfdle" role="tabpanel">
                                <div class="full-view">
                                    <img src="~/assets/img/product/@Model.photo2" alt="">
                                </div>
                            </div>
                            <div class="tab-pane fade" id="contadfdct" role="tabpanel">
                                <div class="full-view">
                                    <img src="~/assets/img/product/@Model.photo1" alt="">
                                </div>
                            </div>
                            <div class="tab-pane fade" id="kidsdfd" role="tabpanel">
                                <div class="full-view">
                                    <img src="~/assets/img/product/@Model.photo2" alt="">
                                </div>
                            </div>
                            @if (Model.Images != null)
                            {
                                
                                    @for (var a = 0; a < Model.Images.Count; a++)
                                    {
                                   
                                        <div class="tab-pane fade" id="marget-@a" role="tabpanel">
                                            <div class="full-view">
                                               <img src="~/assets/img/product/@Model.Images[a].ImaUrl" alt="">
                                            </div>
                                        </div>
                                     
                                }
                            }
                            else
                            {
                                <p>No images available.</p>
                            }                     
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12">
            <div class="single_preview_content pl-30">
                <h4 class="title-5 edit-title border-bottom-0" id="adbala">@Model.name</h4>
                
                <div class="s-product-review">
                    <span><i class="far fa-star start-color"></i></span>
                    <span><i class="far fa-star start-color"></i></span>
                    <span><i class="far fa-star start-color"></i></span>
                    <span><i class="far fa-star start-color"></i></span>
                    <span><i class="far fa-star"></i></span>
                    <span class="pl-left">(1 customer review)</span>
                </div>
                <div class="s-price pt-30 mb-30">
                    <span id="prqiymet">$@Model.price</span>
                </div>
                <div class="s-des">
                    <p>@Model.description</p>
                </div>
                <div class="viewcontent__action single_action pt-30">
                    <span><input type="number" placeholder="1"></span>
                    <span><a href="#" onclick="addto_cartt();">+ add to cart</a></span>
                    <span><i class="fal fa-heart"></i></span>
                    <span><i class="fas fa-compress"></i></span>
                </div>
                @* <a class="p-absoulute pr-2" href="#" onclick="addto_cartt();">add to 7777 cart</a> *@
                <div class="viewcontent__footer border-top-0 border-bottom pb-30">
                    <ul>
                        <li>Category:</li>
                        <li>Color:</li>
                        <li>For:</li>
                    </ul>
                    <ul>
                        <li>@Model.Category?.Name</li>
                        <li>@Model.Color?.color</li>
                        <li>@Model.Category_two?.Name</li>
                    </ul>
                </div>
                <div class="social__media f-social-media mb-30 pt-15">
                    <h3 class="f-title edit-f-title">FOLLOW US ON</h3>
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#"><i class="fab fa-dribbble"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
