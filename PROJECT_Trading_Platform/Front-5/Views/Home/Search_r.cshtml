@model List<Sport_pro>;

<div class="container">
    <div class="row" style="margin-left: -20px;">
     <h2>Search result here</h2>
        <div class="col-2" style="margin-right:50px;">
            <a href="https://z.cdn.ftd.agency/go?z=1369829074&amp;" target="_blank" rel="nofollow" class="g76926"><img src="~/assets/img/logo/aside_gif.gif" style="width:300px;height:500px;margin:20px"></a>
        </div>

    @foreach (var item in Model)
    {
        <div class="col-xl-2">
            <div class="product product-4">
                <div class="product__thumb">

                    <a asp-controller="Home" asp-action="Product_detail" asp-route-id="@item.Id">
                            <img class="product-primary" style="width:250px;height:250px;" src="~/assets/img/product/@item.photo1" alt="product_image">
                            <img class="product-secondary" style="width:250px;height:250px;" src="~/assets/img/product/@item.photo2" alt="product_image">
                    </a>
                    <!-- <div class="product__update">
                        <a class="#">new</a>
                    </div> -->
                    <div class="product-info mb-10">
                        <div class="product_category">
                            <span>Shoes, Clothing</span>
                        </div>
                        <div class="product_rating">
                            <a href="#"><i class="fal fa-star start-color"></i></a>
                            <a href="#"><i class="fal fa-star start-color"></i></a>
                            <a href="#"><i class="fal fa-star start-color"></i></a>
                            <a href="#"><i class="fal fa-star"></i></a>
                            <a href="#"><i class="fal fa-star"></i></a>
                        </div>
                    </div>
                    <div class="product__name">
                        <h4><a asp-controller="Home" asp-action="Product_detail">@item.name</a></h4>
                        <div class="pro-price">
                            <p class="p-absoulute pr-1"><span>$@item.price</span><span></span></p>
                            <a class="p-absoulute pr-2" href="javascript:void(0);" onclick="addto_cart(this);">add to cart</a>
                        </div>
                    </div>
                    <div class="product__action">
                        <div class="inner__action">
                            <div class="wishlist">
                                <a href="#"><i class="fal fa-heart"></i></a>
                            </div>
                            <div class="view">
                                <a href="javascript:void(0)"><i class="fal fa-eye"></i></a>
                            </div>
                            <div class="layer">
                                <a href="#">
                                    <i class="fal fa-layer-group"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- Display other properties of Sport_pro as needed -->
    }
</div>
</div>
</div>